{
  "name": "@jam-comments/utilities",
  "version": "0.1.14",
  "description": "Various JavaScript utilities for JamComments.",
  "main": "dist-client/index.umd.js",
  "types": "dist-client/client/index.d.ts",
  "files": [
    "client/",
    "server/",
    "shared/",
    "dist/"
  ],
  "exports": {
    "./client": {
      "import": "./dist-client/index.es.js",
      "require": "./dist-client/index.umd.js"
    },
    "./server": {
      "import": "./dist-server/index.es.js",
      "require": "./dist-server/index.umd.js"
    },
    "./shared": {
      "import": "./dist-shared/index.es.js",
      "require": "./dist-shared/index.umd.js"
    },
    "./*": {
      "import": "./dist-client/index.es.js",
      "require": "./dist-client/index.umd.js"
    }
  },
  "scripts": {
    "watch": "concurrently \"npm run build:client -- --watch\" \"npm run build:server -- --watch\" \"npm run build:shared -- --watch\"",
    "build:client": "BUILD_SCOPE=client vite build && tsc --outDir dist-client",
    "build:server": "BUILD_SCOPE=server vite build && tsc --outDir dist-server",
    "build:shared": "BUILD_SCOPE=shared vite build && tsc --outDir dist-shared",
    "build": "npm run build:client && npm run build:server && npm run build:shared",
    "test": "jest --config ./jest.config.js",
    "prettify": "prettier ./**/*.{js,md} --write"
  },
  "keywords": [],
  "author": "Alex MacArthur <alex@macarthur.me> (https://macarthur.me)",
  "homepage": "https://jamcomments.com",
  "license": "GPL-2.0",
  "dependencies": {
    "chalk": "^4.1.0",
    "graphql-quest": "^1.0.2",
    "node-fetch": "^2.6.1",
    "shuffle-array": "^1.0.1",
    "url-parse": "^1.5.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "concurrently": "^6.3.0",
    "jest": "^27.2.1",
    "jest-cli": "^27.2.1",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.5",
    "vite": "^2.6.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "2b1cefb90c89a2f70099213881b09216f20e3dc2"
}
