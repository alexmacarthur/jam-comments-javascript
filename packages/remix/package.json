{
  "name": "@jam-comments/remix",
  "version": "2.0.4",
  "description": "A library for integrating JamComments into a Remix application.",
  "main": "dist/cjs/index.js",
  "module": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "rm -rf dist && npm run build:cjs",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs",
    "format": "prettier --write src"
  },
  "files": [
    "./src",
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/cjs/index.js",
      "types": "./dist/cjs/index.d.ts"
    },
    "./server": {
      "import": "./dist/cjs/server.js",
      "types": "./dist/cjs/server.d.ts"
    }
  },
  "keywords": [],
  "author": "Alex MacArthur",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@jam-comments/server-utilities": "^5.0.0"
  }
}
